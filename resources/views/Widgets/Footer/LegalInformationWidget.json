{
    "identifier": "Ceres::LegalInformationWidget",
    "label": "Widget.legalInformationLabel",
    "previewImageURL": "/images/widgets/legal-information.svg",
    "type": "footer",
    "position": 1200,
    "widgetClass": "Ceres\\Widgets\\Footer\\LegalInformationWidget",
    "settings": {
        "showCancellationRights": {
            "type": "checkBox",
            "required": true,
            "label": "Widget.legalInformationShowCancellationLabel",
            "options": {
                "defaultValue": true
            }
        },
        "showLegalDisclosure": {
            "type": "checkBox",
            "required": true,
            "label": "Widget.legalInformationShowLegalDisclosureLabel",
            "options": {
                "defaultValue": true
            }
        },
        "showPrivacyPolicy": {
            "type": "checkBox",
            "required": true,
            "label": "Widget.legalInformationShowPrivacyPolicyLabel",
            "options": {
                "defaultValue": true
            }
        },
        "showGtc": {
            "type": "checkBox",
            "required": true,
            "label": "Widget.legalInformationShowGtcLabel",
            "options": {
                "defaultValue": true
            }
        },
        "cancellationFormContainer": {
            "type": "verticalContainer",
            "label": "Widget.legalInformationCancellationFormContainerLabel",
            "required": false,
            "options": {
                "containerEntries": {
                    "showCancellationForm": {
                        "type": "checkBox",
                        "required": true,
                        "label": "Widget.legalInformationShowCancellationFormLabel",
                        "options": {
                            "defaultValue": true
                        }
                    },
                    "useCancellationPdfUpload": {
                        "type": "checkBox",
                        "required": true,
                        "label": "Widget.legalInformationCancellationPdfActiveLabel",
                        "options": {
                            "defaultValue": false
                        }
                    },
                    "cancellationPdfPath": {
                        "type": "inputFile",
                        "required": false,
                        "label": "Widget.legalInformationCancellationPdfUploadLabel",
                        "options": {
                            "tooltip": "Widget.legalInformationCancellationPdfUploadTooltip",
                            "defaultValue": ""
                        }
                    }
                }
            }
        }
    }
}